---
/**
 * Main page with map and sidebar
 * Uses SBB Lyne Design System
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import SbbHeader from '../components/SbbHeader';
import MapContainer from '../components/Map/MapContainer';
import ErrorBoundary from '../components/ErrorBoundary';
---

<BaseLayout title="Schweizer Tourismus Karte">
  <div class="flex flex-col h-screen">
    <SbbHeader client:load />

    <div class="flex-1 flex overflow-hidden">
      <!-- Main map container -->
      <main id="main-content" class="flex-1 relative">
        <ErrorBoundary client:only="react">
          <MapContainer client:only="react" />
        </ErrorBoundary>
      </main>
    </div>
  </div>
</BaseLayout>
