---
/**
 * Resorts page - Browse all Swiss alpine resorts
 * Uses SBB Lyne Design System
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import SbbHeader from '../components/SbbHeader';
import ResortsContainer from '../components/Resorts/ResortsContainer';
import LanguageSync from '../components/LanguageSync';
---

<BaseLayout title="Alpine Resorts">
  <LanguageSync client:load titleKey="pages.resorts" />
  <div class="flex flex-col h-screen">
    <SbbHeader client:load />

    <div class="flex-1 overflow-hidden">
      <ResortsContainer client:load />
    </div>
  </div>
</BaseLayout>
