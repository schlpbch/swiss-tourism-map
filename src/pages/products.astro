---
/**
 * Products page - displays tourism products
 * Uses SBB Lyne Design System
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import SbbHeader from '../components/SbbHeader';
import ProductsContainer from '../components/Products/ProductsContainer';
import ErrorBoundary from '../components/ErrorBoundary';
---

<BaseLayout title="Produkte | Schweizer Tourismus">
  <div class="flex flex-col h-screen">
    <SbbHeader client:load title="Produkte" />

    <main id="main-content" class="flex-1 overflow-hidden">
      <ErrorBoundary client:only="react">
        <ProductsContainer client:only="react" />
      </ErrorBoundary>
    </main>
  </div>
</BaseLayout>
