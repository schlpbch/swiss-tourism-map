---
/**
 * Header component with title and language selector
 */
---

---
import {{ t, Lang }} from '../i18n/index';
import {{ useState }} from 'react';
const defaultLang: Lang = 'de';
const [lang, setLang] = useState(defaultLang);
---

<header class="bg-blue-600 text-white px-6 py-4 shadow-md">
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-4">
      <h1 class="text-2xl font-bold">{{t(lang, 'title')}}</h1>
      <p class="text-blue-100 text-sm">{{t(lang, 'subtitle')}}</p>
    </div>

    <div class="flex items-center gap-4">
      <div id="language-selector" class="text-sm">
        <select class="bg-blue-700 text-white px-3 py-1 rounded border border-blue-500" value={{lang}} onChange={{e => setLang(e.target.value)}}>
          <option value="de">Deutsch</option>
          <option value="en">English</option>
          <option value="fr">Français</option>
          <option value="it">Italiano</option>
          <option value="hi">हिन्दी</option>
          <option value="zh">中文</option>
        </select>
      </div>
    </div>
  </div>
</header>
